@css{
#loginheader{
    /* IE9 SVG, needs conditional override of 'filter' to 'none' */
    background: url(data:image/svg+xml;base64,);
    background: -moz-linear-gradient(top,  rgba(255,255,255,1) 40%, rgba(255,255,255,0) 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(40%,rgba(255,255,255,1)), color-stop(100%,rgba(255,255,255,0))); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top,  rgba(255,255,255,1) 40%,rgba(255,255,255,0) 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top,  rgba(255,255,255,1) 40%,rgba(255,255,255,0) 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top,  rgba(255,255,255,1) 40%,rgba(255,255,255,0) 100%); /* IE10+ */
    background: linear-gradient(to bottom,  rgba(255,255,255,1) 40%,rgba(255,255,255,0) 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#00ffffff',GradientType=0 ); /* IE6-8 */
    height: 40%;
    max-height: 700px;
    width: 100%;
    }
}
body
    background url("../images/fondo.jpg")no-repeat center center fixed
    background-size cover
    font-family: 'Segoe UI light', Arial,Sans-serif
    font-size 16px
#bloqueLogin
    background-color Lima
    margin 0 auto
    padding 1em 1em .5em 1em
    width 90%
    form
        margin 0
        ul
            list-style none
            margin 0 0 .5em 0
            padding 0
            li
                margin-bottom 1em
                width 100%
                label
                    color Blanco
                    display inline-block
                    font-size 1.5em
                    font-weight normal
                    vertical-align top
                    width 35%
                input
                    background Blanco
                    display inline-block
                    height 1.8em
                    vertical-align top
                    width 60%
    p
        margin .5em 0
        text-align center
        input
            background transparent
            border none
            color Blanco
            cursor pointer
            font-size 2em
            font-weight normal
            line-height 1.5
            margin 0 .5em
            transition all 0.2s ease
            -webkit-transition all 0.2s ease
.bienvenida
	width 63%
	height 300px
	p
		color Lima
		font-family "Champagne"
		font-size 4em
		margin 0
.Cont-Mod-Aut,.Cont-Mod-Login
    width 40%
.Cont-Mod-Aut
    height 42%
    margin-right 10%
    width 36%
.error
    color Blanco
    font-size 1em
    line-height 1
    margin .25em auto
    width 90%
@media only screen and (min-device-width : 768px) and (max-device-width : 1024) and (orientation : landscape)
    .bienvenida
        width 70%