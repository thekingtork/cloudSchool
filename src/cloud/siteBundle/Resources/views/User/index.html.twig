 {% extends 'cloudBundle::layout.html.twig' %}

 {% block title %}
 Administrar Usuario 
 {% endblock %}

 {% block menu_principal %}
 <div class="row" id="contMetro">
<h1>User list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Password</th>
            <th>Salt</th>
            <th>Nombre</th>
            <th>Apellido</th>
             <th>Email</th>
            <th>Avatar_url</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admincloud_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.password }}</td>
            <td>{{ entity.salt }}</td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.apellido }}</td>
            <td>{{ entity.avatarurl }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admincloud_user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admincloud_user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admincloud_user_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
</div>
{% endblock %}