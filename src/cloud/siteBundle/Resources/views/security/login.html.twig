<body id="fondo">
       <div id="loginHeader">
            <div id="bigTitulo">
                <label>Bienvenidos a la </label><br />
                <label>Plataforma Cloud School</label>
            </div>
       </div>
       <div id="contenedorFront">
         <div id="bloqueLogin">
            {% if error %}
            <div>
                {{ error.message }}
            </div>{% endif %}
            <form action="{{ path('login_check') }}" method="post">
                <ol>
                    <li><label for="username">Usuario:</label><input id="username" type="text" name="_username" value="{{ last_username }}"/> </li>
                    <li><label for="password">Contrase&ntilde;a:</label><input id="password" type="password" name="_password"/> </li>
                </ol>
                 <p><input type="submit" name="login" value="Ingresar"/><input type="button" value="Limpiar" /></p>                
            </form>
        </div>
        <div id="generadorCode">
            {% block mod_autenticacion %}
              {% include "cloudBundle::mod_autenticion.html.twig" %}
            {% endblock %}
        </div>
       </div>
</body>
