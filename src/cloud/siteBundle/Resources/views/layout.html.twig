<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <meta name="viewport" content="width=device-width"/>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
            <script type="text/javascript" src="{{asset('javascripts/jquery.js')}}"></script>
        
        <title>{% block title %}{% endblock %}</title>
        {% block estilos %}
            <link rel="stylesheet" href="{{ asset( 'stylesheets/normalize.css') }}"/>
            <link rel="stylesheet" href="{{ asset( 'stylesheets/base.css') }}"/>
        {% endblock %}
    <!-- IE Fix for HTML5 Tags -->
      <!--[if lt IE 9]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
    </head>
    <body>
        <div class="contenidoFull" id="contenedorHeader">
            <div class="contenidoFull" id="tela">
                <header class="contenidoCentrado">
                    <div class="bienvenida">
                        <h1>Bienvenido</h1>
                        <p class="nombre">
                            {% if app is defined %} 
                                {{ app.user.nombre }}  
                                {{  app.user.apellido  }}
                            {% endif %}
                        </p>
                    </div>
                </header>
            </div>
        </div>
        {% block menu_lateral %}
            {% include "cloudBundle::menu_Lateral.html.twig" %}
        {% endblock %}
        <div class="contenidoCentrado" id="contReloj" >
            <div id="Fecha">
                <label><span>8:09 PM</span><p>Viernes 24 de Sep. </p></label>
            </div>
            <div id="ContAvatar">
                <img src="{{ asset('images/perfil.jpg') }}" />
            </div>
        </div>
        <div class="contenidoCentrado" id="ContFecha">
            <div id="contenedorMetro">
                {% block menu_principal %}
                    {% include "cloudBundle::layout_menu.html.twig" %}
                {% endblock %}    
            </div>
            <div id="ContenedorNotf">
            {% block notificaciones %}
                {% include "cloudBundle::layout_notificaciones.html.twig" %}
            {% endblock %}
            </div>
        </div>
        <footer class="contenidoCentrado">
            {% block mod_MenuInferior%}
                {% include "cloudBundle::menuColores.html.twig" %}
            {% endblock %}  
        </footer>
        {% block javascripts %}
            <script type="text/javascript" src="{{asset('javascripts/jquery.easing.1.3.js')}}"></script>
            <script type="text/javascript" src="{{asset('javascripts/tile-slider.js')}}"></script>
            <script src="{{ asset('javascripts/modernizr.foundation.js') }}"></script>
            <script src="{{asset('javascripts/funcionesP.js')}}"></script>
        {% endblock %}
    </body>
</html>
