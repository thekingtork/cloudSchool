<h1>Periodo list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Periodo_inicio</th>
            <th>Periodo_final</th>
            <th>Porcentaje</th>
            <th>Actividades_min</th>
            <th>Actividades_max</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admincloud_periodo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.periodoinicio %}{{ entity.periodoinicio|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.periodofinal %}{{ entity.periodofinal|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.porcentaje }}</td>
            <td>{{ entity.actividadesmin }}</td>
            <td>{{ entity.actividadesmax }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admincloud_periodo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admincloud_periodo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admincloud_periodo_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
