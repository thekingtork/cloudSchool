					</div>
					<div id="TituloSecction">
						<label>Administraci&oacute;n de Sedes</label>
					</div>
					<div id="content_1">
                    {% if sedes %}
                    {%for sede in sedes%}
						<div class="contenedorSedes">
							<div class="sedeI">
								<p class="signoUp">+</p>
								<p class="titulocajas">{{sede.name}}</p>
							</div>
						</div>
                    {%endfor%}
                    {%endif%}
                    
