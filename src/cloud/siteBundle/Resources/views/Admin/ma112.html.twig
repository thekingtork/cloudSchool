{% extends app.request.isXmlHttpRequest ? "cloudBundle::layout_ajax.html.twig" : "cloudBundle::layout.html.twig" %} 
{% block title %}
	MA112
{% endblock %}
{% block menu_principal %}
	<div class="cuerpoCentrado" id="contMetro">
		<link rel="stylesheet" href="{{ asset('stylesheets/Ma1/Ma112/jquery.mCustomScrollbar.css') }}"/>
		<link rel="stylesheet" href="{{ asset('stylesheets/Ma1/Ma112/contenido.css') }}"/>
		<script>
            $(document).ready(function(){
                var nsede=$('#enlace').attr('data-num');
                var cuadros="<div class='contenedorSedes'>";
                for(var i=1; i<=nsede; i++){
                    if(i>10){
                        break;
                    }
                    if((i==1)||(i==4)||(i==7)){
                        cuadros+="<a href='{{path('ma112_new')}}' class='ajax'><div class='sedeI'><p class='signoUp'>+</p><p class='titulocajas'>agregar sede</p></div></a>"
                    }
                    if((i!=4)&&(i!=10)&&(i%2==0)){
                        cuadros+="<a href='{{path('ma112_new')}}' class='ajax'><div class='sedeII'><p class='signoUp'>+</p><p class='titulocajas'>agregar sede</p></div></a>"
                        if(i==6){
                            cuadros+="</div><div class='contenedorSedes'>"
                        }
                    }if(((i!=1)&&(i!=7)) && (i%2!=0)){
                        cuadros+="<a href='{{path('ma112_new')}}' class='ajax'><div class='sedeIII'><p class='signoUp'>+</p><p class='titulocajas'>agregar sede</p></div></a>"
                        if(i==3){
                            cuadros+="</div><div class='contenedorSedes'>"
                        }
                    }
                    
                }
                if(nsede>=4){
                    cuadros+="</div>"
                }
                if(nsede>9){
                    cuadros+="<div class='contenedorSedes'><a href='{{path('ma112_new')}}' class='ajax'><div class='sedeI adsede'><p class='signoUp'>+</p><p class='titulocajas'>Mas sedes</p></div></a></div>"
                }
                $('#content_1').append(cuadros);
                
            })
		</script>
		<div id="ContAjax">
			<link rel="stylesheet" href="{{ asset('stylesheets/Ma1/Ma112/ma112.css') }}"/>
			<div id="bloqueCgenerales">
