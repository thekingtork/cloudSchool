{% extends app.request.isXmlHttpRequest ? "cloudBundle::layout_ajax.html.twig" : "cloudBundle::layout.html.twig" %} 
{% block title %}
	MA3
{% endblock %}
{% block menu_principal %}
	 <div class="cuerpoCentrado" id="contMetro">
		<div id="ContAjax">
			<link rel="stylesheet" href="{{ asset('stylesheets/Ma3/ma3.css') }}"/> 
			<div id="bloqueCgenerales" class="lima">
				<div class="fila">
					<div class="botonRegresar alineacionPfct">
						{% block back %}
							<a href="{{ path('ma') }}" class="ajax">
								<img src="{{ asset('images/b_atras.png') }}"/>
							</a>
						{% endblock %}
					</div>
					<div id="ContTitulo" class="alineacionPfct blancoFc">
						<p>Planes de estudios</p>
					</div>
					<div class="containerSupDer alineacionPfct">
						<div id="buscador">
							<input type="search" name="search_user" id="search_user" placeholder="Buscar">
						</div>			
					</div>
				</div>
				<div class="fila2">
					{% if entities is defined %}
						<div id="content_1">
							{% for entity in entities %}
						    	<div class="nivel letra">
                        			<a href="{{ path('ma312', {'id': entity.id }) }}" class="ajax">
	                          			<p class="titulocajas primera">{{entity.asignatura}}</p>
	                          			<p class="signoUp textoBlanco">{{entity.curso}}</p>
	                          			<p class="signoUp textoBlanco">{% if entity.principal == 1 %}
											Principal
											{% else %}
										    	entity_plan.sedeId
											{% endif %}</p>
                        			</a>
                      			</div>
							{% endfor %}
						<script type="text/javascript">
		                  $(document).on("ready",iniciar);
		                  function iniciar(){
		                     $(".letra .primera").each( function(index){
		                          var nombre = $(this).text();
		                          $(this).html( nombre[0] )
		                     })
		                  }
              			</script>
					</div>
					{% else %}
				    	<p>No tienes Planes</p>
					{% endif %}
				</div>
				<div class="fila">
					<div class="Inicio" ><a href="{{ path('ma') }}" class="ajax" >Inicio</a></div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
