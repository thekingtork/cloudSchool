{% extends app.request.isXmlHttpRequest ? "cloudBundle::layout_ajax.html.twig" : "cloudBundle::layout.html.twig" %} 
{% block title %}
	MA312
{% endblock %}
{% block menu_principal %}
	 <div class="cuerpoCentrado" id="contMetro">
		<div id="ContAjax">
			<link rel="stylesheet" href="{{ asset('stylesheets/Ma1/Ma113/ma113.css') }}"/> 
           <link rel="stylesheet" href="{{ asset('stylesheets/Ma1/Ma1321/ma1321.css') }}"/>

			<div id="bloqueCgenerales" class="lima">
				<div id="contenidoIzq">
					<div class="botonRegresar">
						{% block back %}
							<a href="{{ path('ma') }}" class="ajax" ><img src="{{ asset('images/b_atras.png') }}"></a>
						{% endblock %}
					</div>
            <div>
              <a href="{{ path('ma311') }}" class="ajax"> Agregar Nuevo Plan +</a>
            </div>
				</div>
				<div id="contenidoDer">
					<div class="breadcumbr"><a href="{{ path('ma11') }}" class="ajax" >Ajustes generales</a></div>
                    
					{% if entities is defined %}
						<div id="content_1">
							{% for entity in entities %}
							    {% if entity.name == "Actividad" %}
                    <div class="nivel">
                      <a href="{{ path('ma313', {'id2': entity.id , 'id':id}) }}" class="ajax">
                        <p class="primera signoUp">+</p>
                        <p class="titulocajas textoBlanco">{{entity.name}}</p>
                      </a>
                    </div>
                    {% else %}
                      <div class="nivel letra">
                        <a href="{{ path('ma313', {'id2': entity.id , 'id':id}) }}" class="ajax">
                          <p class="titulocajas primera">{{entity.name}}</p>
                          <p class="signoUp textoBlanco">{{entity.name}}</p>
                        </a>
                      </div>
                    {% endif %}
							{% endfor %}
							<script type="text/javascript">
                  $(document).on("ready",iniciar);
                  function iniciar(){
                     $(".letra .primera").each( function(index){
                          var nombre = $(this).text();
                          $(this).html( nombre[0] )
                     })
                  }
              </script>
						</div>
						{% else %}
						    <p>No tienes actividades</p>
					{% endif %}
                    
                    <div class="Inicio" ><a href="{{ path('ma') }}" class="ajax" >Inicio</a></div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
