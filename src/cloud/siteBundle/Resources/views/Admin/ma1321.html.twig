{% block menu_principal %}
	 <div class="cuerpoCentrado" id="contMetro">
		<div id="ContAjax">
            <link rel="stylesheet" href="{{ asset('stylesheets/Ma1/Ma112/jquery.mCustomScrollbar.css') }}"/>
			<link rel="stylesheet" href="{{ asset('stylesheets/Ma1/Ma113/ma113.css') }}"/>
            <script type="text/javascript" src="{{asset('javascripts/jquery.js')}}"></script>
            <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
            <script src="{{ asset('javascripts/scroll/jquery-ui-1.8.21.custom.min.js') }}"></script>
            <!-- mousewheel plugin -->
            <script src="{{ asset('javascripts/scroll/jquery.mousewheel.min.js') }}"></script>
            <!-- custom scrollbars plugin -->
            <script src="{{ asset('javascripts/scroll/jquery.mCustomScrollbar.js') }}"></script>
            <script >
                (function($){
                $(window).load(function(){
                    $("#content_1").mCustomScrollbar({
                        horizontalScroll:true,
                        scrollButtons:{
                            enable:false,
                            scrollType:"continuous",
                            scrollSpeed:20,
                            scrollAmount:40
                        },
                        advanced:{
                            autoExpandHorizontalScroll:true,
                        },
                    });
                });
            })(jQuery);
            </script>
			<div id="bloqueCgenerales">
				<div id="contenidoIzq">
					<div class="botonRegresar">
						{% block back %}
							<a href="{{ path('ma11') }}" class="ajax" ><img src="{{ asset('images/b_atras.png') }}"/></a>
						{% endblock %}
					</div>
                    {% if mje is defined %}
                        <div>
                            <p>{{ mje }}</p>
                        </div>
                    {% else %}
                    <style type="text/css">
                        .nivel{
                            background: lightblue;
                            border: solid 4px white;
                            cursor: pointer;
                            display: inline-block;
                            
                            font-size: 34px;
                            text-align: center;

                            float: left;
                            height: 200px;
                            margin: 10px 0;
                            padding: 10px;
                            position: relative;
                            vertical-align: top;
                            width: 200px;
                        }

                        #content_1 .letra:nth-child(5n){
                            background: rgb(0,148,214);
                        }

                        #content_1 .letra:nth-child(5n+1){
                            background: rgb(166,215,246);
                        }

                        #content_1 .letra:nth-child(5n+2){
                            background: rgb(172,210,174);
                        }

                        #content_1 .letra:nth-child(5n+3){
                            background: rgb(129,196,206);
                        }
                        #content_1 .letra:nth-child(5n+4){
                            background: rgb(50,51,142);
                        }
                    </style>
                        <div id="content_1" class="mCustomScrollbar _mCS_1">
                                {% for nivel in niveles %}
                                    {% if nivel.name == "Nivel" %}
                                        <div class="nivel">
                                            <a href="#">
                                                    <p class="signoUp">+</p>
                                                    <p class="titulocajas">{{nivel.name}}</p>
                                            </a>
                                        </div>
                                        {% else %}
                                            <div class="nivel letra">
                                                <a href="#">
                                                    <p class="titulocajas">{{nivel.name}}</p>
                                                    <p class="signoUp">{{nivel.name}}</p>
                                            </a>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                                <script type="text/javascript">
                                    $(document).on("ready",iniciar);

                                    function iniciar(){

                                       $(".letra .titulocajas").each( function(index){
                                            var nombre = $(this).text();
                                            $(this).html( nombre[0] )
                                       })

                                        $(".nivel a").click( function(e){
                                            e.preventDefault();
                                             $.ajax(
                                                   {
                                                     url: $(this).attr("href"),
                                                      type: 'POST',
                                                      success: function (r) {
                                                        $(".overlay").html(r);
                                                         $('.overlay').css('display','block');
                                                    } 
                                        
                                                  });
                                        })
                                    }
                                </script>
                        </div>
                    {% endif %}
				</div>
				<div id="contenidoDer">
					<div class="breadcumbr"><a href="{{ path('ma11') }}" class="ajax" >Ajustes generales</a></div>
					
                    
                    <div class="Inicio" ><a href="{{ path('ma') }}" class="ajax" >Inicio</a></div>
				</div>
                <div class="overlay">
                </div>
			</div>
		</div>
		 {% block notificaciones %}         
                {% include "cloudBundle::layout_notificaciones.html.twig" %}
             {% endblock notificaciones %}
	</div>
    
{% endblock %}
