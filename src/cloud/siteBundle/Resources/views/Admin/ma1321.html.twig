							<a href="{{ path('ma11') }}" class="ajax" ><img src="{{ asset('images/b_atras.png') }}"/></a>
						{% endblock %}
					</div>
                    {% if mje is defined %}
                        <div>
                            <p>{{ mje }}</p>
                        </div>
                    {% else %}
                    <style type="text/css">
                        .nivel{
                            background: lightblue;
                            border: solid 4px white;
                            cursor: pointer;
                            display: inline-block;
                            float: left;
                            height: 200px;
                            margin: 10px 0;
                            padding: 10px;
                            position: relative;
                            vertical-align: top;
                            width: 200px;
                        }
                    </style>
                        <div id="content_1" class="mCustomScrollbar _mCS_1">
