                                    $(document).on("ready",iniciar);

                                    function iniciar(){
                                        $(".nivel a").click( function(e){
                                            e.preventDefault();
                                             $.ajax(
                                                   {
                                                     url: $(this).attr("href"),
                                                      type: 'POST',
                                                      success: function (r) {
                                                        $(".overlay").html(r);
                                                         $('.overlay').css('display','block');
                                                    } 
                                        
                                                  });
                                        })
